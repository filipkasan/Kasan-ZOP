{block content}
<!-- Hero sekce -->
<section class="relative flex flex-col justify-center items-center text-center min-h-screen px-6">
    <video id="background-video" autoplay muted loop playsinline preload="auto" class="absolute top-0 left-0 w-full h-full object-cover z-[-1]" poster="{$basePath}/Video/town.jpg">
        <source src="{$basePath}/Video/contact.mp4" type="video/mp4">
        <source src="{$basePath}/Video/town.webm" type="video/webm">
        Tvůj prohlížeč nepodporuje přehrávání videa.
    </video>

    <h1 class="text-4xl sm:text-6xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-gray-300 to-white">
        Kontakt
    </h1>
    <p class="text-lg sm:text-xl text-gray-200 mt-4 max-w-2xl mx-auto">
        Máte dotazy nebo zpětnou vazbu? Ozvěte se nám!
    </p>
</section>

<!-- Kontaktní formulář -->
<section class="flex justify-center items-center py-20 bg-gray-900 text-white">
    <div class="max-w-3xl w-full text-center px-6">
        <h2 class="text-3xl sm:text-4xl font-bold">Napište nám</h2>
        {form contactForm, class => 'mt-8 space-y-6'}
            <div>
                <label for="name" class="block text-lg text-gray-400">Jméno</label>
                {input name, class => 'w-full p-3 bg-gray-800 text-white rounded-lg'}
            </div>

            <div>
                <label for="email" class="block text-lg text-gray-400">E-mail</label>
                {input email, class => 'w-full p-3 bg-gray-800 text-white rounded-lg'}
            </div>

            <div>
                <label for="message" class="block text-lg text-gray-400">Zpráva</label>
                {input message, class => 'w-full p-3 bg-gray-800 text-white rounded-lg', rows => 5}
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
                Odeslat zprávu
            </button>
        {/form}

        {if $flashes}
            <div class="mt-4">
                {foreach $flashes as $flash}
                    <div class="p-4 rounded text-white {if $flash->type === 'success'}bg-green-600{else}bg-red-600{/if}">
                        {$flash->message}
                    </div>
                {/foreach}
            </div>
        {/if}

    </div>
</section>

<!-- Kontaktní údaje -->
<section class="py-24 px-6 bg-gradient-to-b from-gray-900 to-black text-white">
    <div class="max-w-5xl mx-auto text-center">
        <h2 class="text-4xl sm:text-5xl font-extrabold tracking-tight">Naše kontaktní údaje</h2>
        <p class="text-lg sm:text-xl text-gray-400 mt-6">
            📍 Adresa: Ulice 123, Město, Česká republika
        </p>
        <p class="text-lg sm:text-xl text-gray-400 mt-2">
            📞 Telefon: +420 123 456 789
        </p>
        <p class="text-lg sm:text-xl text-gray-400 mt-2">
            📧 E-mail: info@swiftmate.cz
        </p>
    </div>
</section>
{/block}
