{block content}
<section class="relative flex items-center justify-center min-h-screen bg-gray-950 px-6 text-white">
    <div class="absolute top-0 left-0 w-full h-full bg-cover bg-center z-0" style="background-image: url('{$basePath}/img/mountains.webp');">
    </div>

    <!-- Login Card -->
    <div class="relative z-10 w-full max-w-md p-10 bg-white/10 backdrop-blur-xl rounded-2xl shadow-lg ring-1 ring-white/20">
        <h2 class="text-3xl font-semibold text-center mb-8 tracking-tight">P콏ihl치코en칤 游댏</h2>

        <form n:name="signInForm" class="space-y-6">
