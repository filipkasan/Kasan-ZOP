{block content}
<div class="min-h-screen bg-gray-900 text-white flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-2xl bg-gray-800 rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold mb-8 text-center">Přidat novou kategorii</h1>
        <div class="mb-6">
            <a href="{link Calculator:default}" class="inline-block bg-gray-700 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded transition">
                ← Zpět na dashboard
            </a>
        </div>

        <form n:name="addCategoryForm" class="space-y-6">

            <div>
                <label class="block mb-1 text-sm font-semibold">Název kategorie</label>
                <input n:name="name"
                       type="text"
                       class="bg-gray-700 border border-gray-600 rounded w-full p-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Například: Práce, Studium" />
            </div>

            <div>
                <label class="block mb-1 text-sm font-semibold">Barva kategorie</label>
                <input n:name="color"
                       type="color"
                       class="w-full p-2 border border-gray-600 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <div class="text-center pt-4">
                <button n:name="send"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded transition duration-200">
                    💾 Uložit kategorii
                </button>
            </div>

        </form>
    </div>
</div>
{/block}
